{
  "name": "Lite",
  "version": "1.0.0",
  "description": "Helpdesk theme.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy": "ncp node_modules/uikit/src/scss/ _sass/uikit/",
    "lint": "jshint assets/js/custom.js",
    "uglify": "uglifyjs node_modules/uikit/dist/js/uikit.js node_modules/uikit/dist/js/uikit-icons.js node_modules/tocbot/dist/tocbot.js -m -c -o assets/js/main.js",
    "concat": "uglifyjs node_modules/uikit/dist/js/uikit.js node_modules/uikit/dist/js/uikit-icons.js node_modules/tocbot/dist/tocbot.js -b -o assets/js/main.js",
    "dev": "npm run lint && npm run concat",
    "build": "npm run lint && npm run uglify",
    "watch": "watch 'npm run dev' assets/js/",
    "postinstall": "npm run copy && npm run concat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/"
  },
  "homepage": "https://github.com/",
  "dependencies": {
    "tocbot": "^4.3.0",
    "uikit": "^3.0.0-beta.42"
  },
  "devDependencies": {
    "jshint": "latest",
    "ncp": "latest",
    "uglify-js": "latest",
    "watch": "latest"
  }
}
